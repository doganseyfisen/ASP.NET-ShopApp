@model ProductListViewModel

<div class="row">
    <!-- ViewComponent -->
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products="" number="4"></div>
    </div>

    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Product product in Model.Products)
            {
                <partial name="_ProductCard" model="@product" />
            }
        </div>
        <div class="text-center">
            <div page-model="@Model?.Pagination" page-action="Index" page-classes-enabled="true" page-class="btn"
                page-class-normal="btn-outline-primary" page-class-selected="btn-primary" class="btn-group">
            </div>
        </div>
    </div>
</div>
