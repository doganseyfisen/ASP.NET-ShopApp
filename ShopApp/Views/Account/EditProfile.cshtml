@model EditProfileDto

<div class="text-center my-3">
    <div class="display-6">
        <i class="fa-solid fa-pen-to-square"></i>
        <br>
        Edit
    </div>
</div>

<form method="post" asp-action="EditProfile" asp-for="ReturnUrl">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label asp-for="UserName">User Name</label>
                <input asp-for="UserName" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>

            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <input type="submit" value="Submit" class="btn rounded-pill btn-success" />
                    <a asp-action="Index" class="btn rounded-pill btn-outline-success">
                        Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>