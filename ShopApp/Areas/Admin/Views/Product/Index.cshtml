@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>
    <div class="d-flex justify-content-end my-3">
        <a class="btn rounded-pill text-light" style="background-color:	#008000;" asp-area="Admin"
            asp-controller="Product" asp-action="Create">Create</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Product Price ($)</th>
                <th>Category</th>
                <th>Product Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.CategoryId</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn rounded-pill text-light" style="background-color:	#009eb9;"
                                asp-action="Update" asp-route-id="@product.ProductId">Edit</a>

                            <a class="btn rounded-pill text-light" style="background-color:	#e91212;"
                                asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                            
                            <a class="btn rounded-pill text-light ml-2" target="_blank" asp-area="" asp-controller="Product"  style="background-color:	#e22fd3;"
                                asp-action="Get" asp-route-id="@product.ProductId">See</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
