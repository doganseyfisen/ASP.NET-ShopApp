@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All">
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductPrice">Product Price</label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>
    
    <div class="form-group my-3">
        <label asp-for="ProductDescription">Product Description</label>
        <input asp-for="ProductDescription" class="form-control" />
    </div>
    

    <div class="form-group my-3">
        <label asp-for="CategoryId">Category</label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductImageUrl">Product Image</label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <button class="btn rounded-pill text-light" style="background-color:#008000;" type="submit">Save</button>
        <a class="btn rounded-pill text-light" style="background-color:	rgb(255, 126, 29);" asp-controller="Product"
            asp-action="Index">Products</a>
    </div>
</form>