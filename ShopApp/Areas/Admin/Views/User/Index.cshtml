@model IEnumerable<IdentityUser>

<div class="text-center my-3">
    <div class="display-6 border-bottom">Users</div>
</div>

<div class="d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-outline-success rounded-pill">
        <i class="fa fa-solid fa-plus"></i>
        Add User
    </a>
</div>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Roles</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td user-name="@user.UserName" user-role=""></td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn btn-success rounded-pill" asp-action="Update" asp-route-id="@user.UserName">
                            Edit</a>
                        <a class="btn btn btn-dark rounded-pill" asp-action="ResetPassword" asp-route-id="@user.UserName">
                            Reset Password</a>
                        <form method="post" asp-action="DeleteOneUser">
                            <input type="hidden" name="UserName" value="@user.UserName" />
                            <button type="submit" class="btn btn-danger rounded-pill">
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>