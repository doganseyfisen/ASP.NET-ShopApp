@model ResetPasswordDto

<div class="text-center my-3">
    <div class="display-6 border-bottom">Reset Password for <strong>@Model?.UserName</strong></div>
</div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="ResetPassword">
    <input type="hidden" asp-for="UserName" />
    <div class="form-group my-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="btn-group">
        <button type="submit" class="btn rounded-pill btn-warning">
            Reset
        </button>
        <a class="btn btn-outline-warning rounded-pill text-dark" asp-action="Index">
            Users
        </a>
    </div>
</form>